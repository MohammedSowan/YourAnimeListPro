<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/row_item"

    >


    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="@color/black"
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:layout_margin="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"

        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activity.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/portrait"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/animeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="16dp"
                android:capitalize="characters"
                android:fontFamily="sans-serif-black"
                android:text="JoJo's Bizzare Adventure"
                android:textAllCaps="true"
                android:textSize="28dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="10dp" />


            <TextView
                android:id="@+id/animeEpisodes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="9dp"
                android:fontFamily="sans-serif"
                android:text="Episodes: 149"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/animeGenre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AnimeImageView" />


            <TextView
                android:id="@+id/animeRating"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="9dp"
                android:text="rating: 4.8/5"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/animeGenre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/animeEpisodes"
                app:layout_constraintTop_toBottomOf="@+id/AnimeImageView" />

            <TextView
                android:id="@+id/animeGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="genre: Fantasy, shonen, occlut Fiction, bizzare, Adventure fiction"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="10dp" />

            <ImageView
                android:id="@+id/AnimeImageView"
                android:layout_width="234dp"
                android:layout_height="135dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animeTitle"
                app:srcCompat="@drawable/hutao" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView
>

</androidx.constraintlayout.widget.ConstraintLayout>